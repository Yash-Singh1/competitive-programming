{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file on Mac",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",
        "-std=c++17",
        "-Wextra",
        "-O0",
        "-fdiagnostics-color=always",
        "${fileBasename}",
        "-o",
        "${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": "/Users/**/*"
      },
      "detail": "compiler: /usr/bin/g++"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",
        "-std=c++17",
        "-fdiagnostics-color=always",
        "-O0",
        "-g",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "${fileDirname}/${fileBasename}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": "/home/**/*"
      },
      "detail": "compiler: /usr/bin/g++"
    },
